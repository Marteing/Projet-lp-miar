<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/fragment_pool"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/name_header"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Name"
                android:textColor="#000"
                android:textSize="16dp"
                android:textStyle="normal|bold"
                />
        </FrameLayout>

        <ImageButton
            android:id="@+id/parameter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_black_24dp"
            />

        <ImageButton
            android:id="@+id/img1_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_accessible_black_24dp"
            android:padding="0dp"
            android:background="@null"
            />
        <ImageButton
            android:id="@+id/img2_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_directions_bus_black_24dp"
            android:padding="0dp"
            android:background="@null"
            />

        <ImageButton
            android:id="@+id/img3_header"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_swimming"
            android:padding="0dp"
            android:background="@null"
            />
        <ImageButton
            android:id="@+id/img4_header"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_toboggan"
            android:padding="0dp"
            android:background="@null"/>

        <ImageButton
            android:id="@+id/note_header"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:src="@drawable/btnnote"
            />

        <ImageButton
            android:id="@+id/img5_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_search_black_24dp"
            android:padding="0dp"
            android:background="@null"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ListView
            android:id="@+id/list_pools"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>


</LinearLayout>