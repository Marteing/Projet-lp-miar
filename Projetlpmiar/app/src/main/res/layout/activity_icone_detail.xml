<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mgadan.projet_lp_miar.icone_detail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">


        <ImageView
            android:id="@+id/img1_header"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_accessible_black_24dp"
            android:padding="0dp"
            android:background="@null"
            android:layout_gravity="center_horizontal"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Accés aux handicapés\nLes piscines avec accés aux handicapés seront affichés au debut"
            android:background="@color/BlueBG"
            android:fontFamily="@font/splatoon2"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>

        <ImageView
            android:id="@+id/img2_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_directions_bus_black_24dp"
            android:padding="0dp"
            android:background="@null"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Accés aux handicapés"
            android:background="@color/BlueBG"
            android:fontFamily="@font/splatoon2"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>

        <ImageButton
            android:id="@+id/img3_header"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_swimming"
            android:padding="0dp"
            android:background="@null"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Accés aux handicapés"
            android:background="@color/BlueBG"
            android:fontFamily="@font/splatoon2"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>
        <ImageView
            android:id="@+id/img4_header"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_toboggan"
            android:padding="0dp"
            android:background="@null"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Accés aux handicapés"
            android:background="@color/BlueBG"
            android:fontFamily="@font/splatoon2"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>

        <ImageView
            android:id="@+id/note_header"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:src="@drawable/btnnote"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Accés aux handicapés"
            android:background="@color/BlueBG"
            android:fontFamily="@font/splatoon2"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
